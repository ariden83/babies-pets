<div class="row bg-white bloc-inscription bloc-commentaire mg-top-10 bloc-annonces">
  <div class="col-xs-12">
    <h3 class="ttl-h3"><i class="fas fa-pen-square"></i> Ecrire un message</h3>
    <form class="txt-20 form-message has-validation-callback" method="post" id="formmessage" enctype="multipart/form-data">
      <div class="row">
        <div class="col-xs-12">
          <input type="email" placeholder="Votre email" name="email" id="email" class="field" data-validation="email required" data-validation-length="min7"/>
        </div>
      </div>
      <div class="row mg-top-10 mg-bottom-20">
        <div class="col-xs-12">
          <input type="text" placeholder="Votre nom et prénom" name="name" id="name" class="field" data-validation="length required" data-validation-length="min4"/>
        </div>
      </div>
      <div class="row mg-top-10 mg-bottom-20">
        <div class="col-xs-12">
          <input type="text" placeholder="Votre numéro de téléphone" name="phone" id="phone" class="field" data-validation="length required" data-validation-length="min10"/>
        </div>
      </div>
      <div class="row mg-top-10">
        <div class="col-xs-12">
          <textarea id="description" name="message" placeholder="Votre message" class="field-area" data-validation="length required" data-validation-length="min20" maxlength="4000"></textarea>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12">
          <input type="hidden" value="<%= id%>" name="annonce" />
          <input type="submit" value="Envoyer" class="btn float-right" id="button_submit"/>
        </div>
      </div>
    </form>
  </div>
</div>
