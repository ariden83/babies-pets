<div class="container mg-top-20 txt-18" id="bloc-authentification">
  <div class="row">
    <div class="col-xs-12 bg-white bloc-padding-small">

      <div class="row">
        <div class="col-xs-12">
          <h3 class="ttl-h3 bd-grey mg-bottom-30 txt-up">Vos informations personnelles</h3>
        </div>
      </div>

      <div class="row mg-top-10">
        <div class="col-xs-12 col-sm-4">
          <p>Email *</p>
        </div>
        <div class="col-xs-12 col-sm-8">
          <input type="email" value="" name="email" class="field field-email" data-title="email"
                 data-validation="email required"/>
        </div>
      </div>

      <div class="row mg-top-10">
        <div class="col-xs-12 col-sm-4">
          <p>Pseudo *</p>
        </div>
        <div class="col-xs-12 col-sm-8">
          <input type="text" value="" name="pseudo" class="field field-pseudo" data-title="pseudo"
                 data-validation-length="min4" data-validation="required length"/>
        </div>
      </div>

      <div class="row mg-top-10">
        <div class="col-xs-12 col-sm-4">
          <p>Téléphone *</p>
        </div>
        <div class="col-xs-12 col-sm-8">
          <input type="text" value="" name="phone" class="field field-phone" data-title="téléphone"
                 data-validation-length="min8" data-validation="required length"/>
        </div>
      </div>

      <div class="row mg-top-10">
        <div class="col-xs-12 col-sm-4">
          <p>Code postal *</p>
        </div>
        <div class="col-xs-12 col-sm-8">
          <input type="text" value="" name="postal" class="field field-postal" data-title="code postal"
                 data-validation-length="min4 max5" data-validation="required length" placeholder="Ex: 83150"/>
        </div>
      </div>

      <div class="row mg-top-10">
        <div class="col-xs-12 col-sm-4">
          <p>Vous êtes *</p>
        </div>
        <div class="col-xs-12 col-sm-8">
          <select id="professional" name="professional" class="field-select field-professional full ">
            <option value="false">Particulier</option>
            <option value="true">Professionnel</option>
          </select>
        </div>
      </div>

      <div class="row mg-top-10 field-siren hidden">
        <div class="col-xs-12 col-sm-4">
          <p>Numéro Siren *</p>
        </div>
        <div class="col-xs-12 col-sm-8">
          <input type="text" value="" name="siren" class="field field-siren" data-title="Numéro Siren"
                 placeholder="Vore numéro Siren" data-validation-length="min5" data-validation="length"/>
        </div>
      </div>

      <div class="row mg-top-10">
        <div class="col-xs-12 col-sm-4">
          <p>Mot de passe *</p>
        </div>
        <div class="col-xs-12 col-sm-8">
          <input type="password" value="" name="password" class="field field-password" data-title="mot de passe"
                 data-validation-length="min6" data-validation="alphanumeric required length"/>
        </div>
      </div>
    </div>
  </div>
</div>
