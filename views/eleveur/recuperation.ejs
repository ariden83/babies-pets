<%- partial ('../layout/header.ejs') %>
</div>
<div class="container-fluid bg-cat">
  <div class="container mg-top-85">

    <div class="row">
      <div class="col-xs-12">
        <form method="post" class=" form-inscription has-validation-callback" id="form-inscription" action="/mon-compte/eleveur/reassign">
          <div class="row mg-bottom-20">
            <div class="col-xs-12 col-md-8">
              <div class="row">
                <div class="col-xs-12 bg-white bloc-padding-small">
                  <div class="row ">
                    <div class="col-xs-12 bd-grey">
                      <p class="txt-14 mg-top-10"><a href="/mon-compte" title="Revenir sur votre profil">Votre compte</a> > Edition de votre page : "<%= (user.details.titre || user.pseudo || '') %>"</p>
                      <h2 class="ttl-h3 mg-bottom-20 txt-up mg-top-20">Edition de votre page<br/><span class="txt-26">"<%= (user.details.titre || user.pseudo || '') %>"</span></h2>
                    </div>
                  </div>
                  <%- partial ('form.ejs') %>
                  <input type="hidden" name="url" value="<%- user.url || '' %>" readonly="readonly"/>
                  <input type="hidden" name="page_id" value="<%- user.user_id || '' %>" readonly="readonly"/>
                </div>
              </div>
            </div>

            <div class="col-md-4 col-xs-12">
              <div class="col-xs-12">
                <% if (espece) {%>
                <div class="row bg-white bloc-padding-small mg-bottom-20">
                  <div class="row data-small">
                    <a href="/espece/<%- espece.type || '' %>/<%- espece.url || '' %>" title="Voir la fiche de <%- espece.name || '' %>" target="_blank">
                      <img src="<%- espece.file || '' %>" alt="<%- espece.name %>"/>
                    </a>
                    <p class="txt-18 mg-top-20">Spécialité de <%= (user.details.titre || user.pseudo || '') %>:</p>
                    <div class="mg-left-20">
                      <p class="mg-bottom-10 picto-patte sprite-before txt-20"><%- espece.name %></p>
                    </div>
                  </div>
                </div>
                <%  } %>

                <div class="row">
                  <div class="col-xs-12 col-sm-6 col-md-12 bg-white bloc-padding-small">
                    <div class="mg-bottom-20 upload-avatar" id="my-avatar" <% if (user.avatar) { %> style="background-image: url(<%= user.avatar %>) <% } %>"></div>
                  </div>

                  <div class="col-xs-12 mg-top-10 mg-bottom-20 bg-grey pd-left-40 txt-16">
                    <nav>
                      <h4 class="mg-top-30">Protection &amp; Sécurité</h4>
                      <li><span class="txt-20 txt-cursive-small">&gt;</span> <a href="/a-propos/cgu.html" title="Ouvrir les conditions générales d'utilisation" target="_blank">Conditions d'utilisation</a></li>
                      <li><span class="txt-20 txt-cursive-small">&gt;</span> <a href="/a-propos/politique-confidentialite.html" title="Ouvrir la politique de confidentialité" target="_blank">Politique de confidentialité</a></li>
                      <li><span class="txt-20 txt-cursive-small">&gt;</span> <a href="/a-propos/mentions-legales.html" title="Ouvrir les mentions légales" target="_blank">Mentions Légales</a></li>
                      <li><span class="txt-20 txt-cursive-small">&gt;</span> <a href="/a-propos/cookies-eu.html" title="Voir les informations sur les cookies" target="_blank">Information sur les cookies</a></li>
                      <li><span class="txt-20 txt-cursive-small">&gt;</span> <a href="/a-propos/securite-conseils.html" title="Voir les conseils sur la sécurité" target="_blank">Conseils sur la sécurité</a></li>
                    </nav>
                    <h4 class="mg-top-30">Besoin d'aide?</h4>
                    <p>Contactez-nous</p>
                    <p>En nous envoyant un email à</p>
                    <p><span class="txt-20 txt-cursive-small">&gt;</span> <a href="mailto:contact@babies-pets.fr">contact@babies-pets.fr</a></p>
                    <p>ou via</p>
                    <p class="mg-bottom-60"><span class="txt-20 txt-cursive-small">&gt;</span> le <a href="/contacter-la-team" target="_blank" title="Contactez-nous via le formulaire de contact">formulaire de contact</a></p>
                  </div>

                  <div class="col-xs-12 mg-top-10 bg-white mg-bottom-20">
                    <div data-format="carre" class="load-pub"></div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <% if (!user_id) { %>
          <div class="row bg-white mg-bottom-20 bloc-padding-small txt-20" id="bloc-authentification">
            <div class="col-xs-12">
              <div class="row">
                <div class="col-xs-12">
                  <h3 class="ttl-h2 bd-grey mg-bottom-30 mg-top-20">Créez votre compte</h3>
                </div>
              </div>
              <div class="row">
                <div class="col-xs-4">
                  <p>Votre email</p>
                </div>
                <div class="col-xs-8">
                  <input value="" name="email" placeholder="Votre email" class="field" data-title="email" data-validation="length required" data-validation-length="min4" type="email"/>
                </div>
              </div>
              <div class="row mg-top-10">
                <div class="col-xs-4">
                  <p>Votre pseudo</p>
                </div>
                <div class="col-xs-8">
                  <input value="" name="pseudo" placeholder="Votre pseudo" class="field" data-title="pseudo" data-validation="length required" data-validation-length="min4" type="text"/>
                </div>
              </div>
              <div class="row  mg-top-10">
                <div class="col-xs-4">
                  <p>Votre téléphone</p>
                </div>
                <div class="col-xs-8">
                  <input value="<%- user.phone || '' %>" name="phone" placeholder="Votre téléphone" class="field" data-title="téléphone" data-validation="length required" data-validation-length="min10" type="phone"/>
                </div>
              </div>
              <div class="row mg-top-30">
                <div class="col-xs-4">
                  <p>Votre mot de passe</p>
                </div>
                <div class="col-xs-8">
                  <input value="" name="password" placeholder="Votre mot de passe" class="field" data-title="mot de passe" data-validation="length required" data-validation-length="min4" type="password"/>
                </div>
              </div>
              <div class="row mg-top-10 bd-grey">
                <div class="col-xs-4">
                  <p>Confirmation de mot de passe</p>
                </div>
                <div class="col-xs-8 mg-bottom-20">
                  <input value="" name="confirmPassword" placeholder="Confirmez votre mot de passe" class="field" data-title="mot de passe" data-validation="length required" data-validation-length="min4" type="password"/>
                </div>
              </div>

              <div class="row mg-top-10 field-postal hidden bd-grey">
                <div class="col-xs-12 col-sm-4">
                  <p>Code postal *</p>
                </div>
                <div class="col-xs-12 col-sm-8 mg-bottom-30">
                  <input type="text" value="" name="postal" class="field field-postal" data-title="Code postal"
                         placeholder="Vore code postal" data-validation-length="min4" data-validation="length required"/>
                </div>
              </div>

              <div class="row mg-top-20 bd-grey mg-bottom-30">
                <div class="col-xs-6">
                  <p>J'acceptes les <a target="_blank" href="/a-propos/cgu.html" title="Voir les conditions d'utilisation">conditions d'utilisation</a></p>
                </div>
                <div class="col-xs-6">
                  <p class="container-cgu">
                    <input type="checkbox" name="cgu" id="cgu" required="required" class="input-cgu" data-validation="required"/>
                    <label class='bloc-cgu' for="cgu"></label>
                  </p>
                </div>
              </div>
            </div>
          </div>
          <% } %>

          <div class="row bg-white mg-bottom-20 bloc-padding-small">
            <div class="col-xs-12 col-sm-5 col-sm-offset-1">
              <div class="row">
                <div class="col-xs-12">
                  <h3 class="ttl-h3 bd-grey mg-bottom-30 txt-up">Valider la récupération<br/>et la modification de la page</h3>
                </div>
                <div class="col-xs-1">
                  <input class="check optin" name="from_partners" value="true" type="checkbox" data-validation="required"/>
                </div>
                <div class="col-xs-11">
                  <label for="from_partners_yes" class="optinLabel">
                    Je certifie être le propriétaire de cette page je souhaite pouvoir modifier ma page sur babies-pets.fr
                  </label>
                </div>
                <div class="col-xs-12 mg-top-30">
                  <input id="publish_button" class="btn" name="publish" value="Enregistrer" type="submit"/>
                </div>
              </div>
            </div>
            <div class="col-xs-12 col-sm-5">
              <img class="img-responsive" alt="Authentifiez-vous sur babies-pets pour poster vos annonces" src="/img/background/lapinou.jpg"/>
            </div>
          </div>

      </form>
    </div>
  </div>
</div>

<%- partial ('../partial/pub-bottom.ejs') %>
<%- partial ('../layout/footer.ejs') %>
