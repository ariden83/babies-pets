<%- partial ('../layout/header.ejs') %>
</div>
<div class="container-fluid bg-cat">
  <div class="container mg-bottom-20 bg-white bloc-padding-small">
    <div class="row">
      <div class="col-xs-12 col-sm-7">
      <form method="post" class="txt-20 form-connexion has-validation-callback" id="form-connexion" action="/compte/authentification">
        <div class="row">
          <div class="col-xs-12">
            <h2 class="ttl-h2 bd-grey mg-bottom-20 txt-up">Connectez-vous</h2>
            <p class="mg-bottom-30 txt-justify">Connectez-vous sur babies-pets.fr et accédez à toutes vos annonces, retrouvez vos favoris, échangez des messages avec les autres utilisateurs.</p>
          </div>
        </div>
        <div class="col-xs-12 mg-bottom-10">
          <input value="" name="email" placeholder="Votre email" class="field" data-title="email" data-validation="length required" data-validation-length="min4" type="email"/>
        </div>
        <div class="col-xs-12 mg-bottom-30">
          <input value="" name="password" placeholder="Votre mot de passe" class="field" data-title="mot de passe" data-validation="length required" data-validation-length="min4" type="password"/>
        </div>
        <div class="col-xs-12 mg-bottom-30 bd-grey">
          <p class="txt-16">Vous avez oublié votre mot de passe ? <a title="Mot de passe oublié ?" href="/mon-compte/recuperer-mot-de-passe" class="btn-forgot">Recupérez votre mot de passe</a></p>
        </div>
        <div class="row">
          <div class="col-xs-12">
              <input type="submit" value="Connectez-vous" class="btn float-right xs-float-disable" id="button-connexion"/>
          </div>
        </div>
      </form>
      </div>
      <div class="col-xs-12 col-sm-5">
        <img class="img-responsive" alt="Authentifiez-vous sur babies-pets pour poster vos annonces" src="/img/background/hamster.jpg" style="padding-top: 110px; width: 350px" />
      </div>
  </div>
</div>

<div class="container mg-bottom-40 bloc-padding-small bg-white">
  <div class="row">
    <div class="col-xs-12 col-sm-9">
      <form method="post" class="txt-20 form-inscription has-validation-callback" id="form-inscription" action="/compte/creation">
        <div class="row">
          <div class="col-xs-12">
            <h2 class="ttl-h2 bd-grey mg-bottom-30">Créez votre compte</h2>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-4 col-xs-12">
            <p>Votre email</p>
          </div>
          <div class="col-sm-8 col-xs-12">
            <input value="" name="email" placeholder="Votre email" class="field" data-title="email" data-validation="length required" data-validation-length="min4" type="email"/>
          </div>
        </div>
        <div class="row mg-top-10">
          <div class="col-sm-4 col-xs-12">
            <p>Votre pseudo</p>
          </div>
          <div class="col-sm-8 col-xs-12">
            <input value="" name="pseudo" placeholder="Votre pseudo" class="field" data-title="pseudo" data-validation="length required" data-validation-length="min4" type="text"/>
          </div>
        </div>
        <div class="row  mg-top-10">
          <div class="col-sm-4 col-xs-12">
            <p>Votre téléphone</p>
          </div>
          <div class="col-sm-8 col-xs-12">
            <input value="" name="phone" placeholder="Votre téléphone" class="field" data-title="téléphone" data-validation="length required" data-validation-length="min10" type="phone"/>
          </div>
        </div>
        <div class="row mg-top-30">
          <div class="col-sm-4 col-xs-12">
            <p>Votre mot de passe</p>
          </div>
          <div class="col-sm-8 col-xs-12">
            <input value="" name="password" placeholder="Votre mot de passe" class="field" data-title="mot de passe" data-validation="length required" data-validation-length="min4" type="password"/>
          </div>
        </div>
        <div class="row mg-top-10 bd-grey">
          <div class="col-sm-4 col-xs-12">
            <p>Confirmation de mot de passe</p>
          </div>
          <div class="col-sm-8 col-xs-12 mg-bottom-20">
            <input value="" name="confirmPassword" placeholder="Confirmez votre mot de passe" class="field" data-title="mot de passe" data-validation="length required" data-validation-length="min4" type="password"/>
          </div>
        </div>


        <div class="row mg-top-10">
          <div class="col-xs-12 col-sm-4 mg-top-20">
            <p>Vous êtes *</p>
          </div>
          <div class="col-xs-12 col-sm-8 mg-bottom-20 mg-top-20">
            <select id="professional" name="professional" class="field-select field-professional full ">
              <option value="false">Particulier</option>
              <option value="true">Professionnel</option>
            </select>
          </div>
        </div>

        <div class="row mg-top-10 field-siren hidden">
          <div class="col-xs-12 col-sm-4">
            <p>Numéro Siren *</p>
          </div>
          <div class="col-xs-12 col-sm-8">
            <input type="text" value="" name="siren" class="field field-siren" data-title="Numéro Siren"
                   placeholder="Vore numéro Siren" data-validation-length="min5" data-validation="length required"/>
          </div>
        </div>

        <div class="row mg-top-10 field-postal hidden bd-grey">
          <div class="col-xs-12 col-sm-4">
            <p>Code postal *</p>
          </div>
          <div class="col-xs-12 col-sm-8 mg-bottom-30">
            <input type="text" value="" name="postal" class="field field-postal" data-title="Code postal"
                   placeholder="Vore code postal" data-validation-length="min4" data-validation="length required"/>
          </div>
        </div>

        <div class="row mg-top-20 bd-grey mg-bottom-30">
          <div class="col-xs-6">
            <p>J'acceptes les <a target="_blank" href="/a-propos/cgu.html" title="Voir les conditions d'utilisation">conditions d'utilisation</a></p>
          </div>
          <div class="col-xs-6">
            <p class="container-cgu">
                <input type="checkbox" name="cgu" id="cgu" required="required" class="input-cgu" data-validation="required"/>
                <label class='bloc-cgu' for="cgu"></label>
            </p>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12">
              <input type="submit" value="Valider l'inscription" class="btn float-right" id="button-inscription"/>
          </div>
        </div>
      </form>
    </div>

    <%- partial ('../partial/bloc-cgu.ejs') %>

  </div>
</div>
<%- partial ('../partial/pub-bottom.ejs') %>
<%- partial ('../layout/footer.ejs') %>
